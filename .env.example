# WhisperLiveKit Docker Configuration

# Server Port
WLK_PORT=8000

# GPU Selection (auto-selected by default, or specify manually like "0,1")
CUDA_VISIBLE_DEVICES=auto

# Model Configuration
WLK_MODEL=medium
WLK_LANGUAGE=auto

# Resource Management (minutes)
WLK_IDLE_TIMEOUT=10

# Optional: Enable diarization
WLK_DIARIZATION=false

# Optional: Translation target language
WLK_TARGET_LANGUAGE=
